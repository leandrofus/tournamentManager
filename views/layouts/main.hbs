      <button style="float: right;" id="crearLiga">Crear liga</button>
    </nav>
    <script>
      $('#crearLiga').on('click', () => {
        fetch('/api/ligas', {
          method: 'post',
          body: JSON.stringify({ nombre: 'gran copa hitler', fechaInicio: '01/09/2018', jugadoresIds:"2" }),
          headers: {
            'Content-Type': 'application/json'
          },
        })
      })
    </script>
  </header>

  <main>
    {{{body}}}
  </main>

  <footer>
